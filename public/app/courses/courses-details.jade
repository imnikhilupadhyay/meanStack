.container
 h1 {{course .title}}
  .row 
   .col-md-12
    h3 Featured
  .row
   .col-md-6
    .row
     .col-md-6
      h3 Published on
      h4 {{course.published | date}}
     .col-md-6
      h3 Status
      h4(ng-show="course.status.toLowerCase() === 'open'")
       mark.open {{course.status | uppercase}}
      h4(ng-show="course.status.toLowerCase() === 'booked'")
       mark.booked {{course.status | uppercase}}
      h4(ng-show="course.status.toLowerCase() === 'closed'")
       mark.booked {{course.status | uppercase}}
    .row
     .col-md-6
      h3 Time Left
      h4(ng-show="timeLeft == ''") Loading..
      h4(ng-show="timeLeft != ''") {{timeLeft}}
   .col-md-6
    .panel.panel-primary
     .panel-heading Tags
     .panel-body
      div(ng-repeat="tag in course.tags") {{tag}}